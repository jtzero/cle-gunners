---
import config from "@/config/config.json";
import { fromBase } from "@/lib/fromBase";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = {
  post: CollectionEntry<"posts">;
  styling: string;
};

const { post, styling } = Astro.props;
const { summary_length } = config.settings;
---

<div data-testid="location-post" class={`${styling} tile border-t-2 border-t-dark-red flex flex-col lg:border-none lg:flex-row-reverse`}>
  <div class="flex flex-col justify-around text-center lg:w-1/2">
    <div class="title">
      <h3 class="h4 mt-2 text-center pt-2 px-[0.10rem] text-gold border-b-1 border-divider text-balance">
        Join us for every Premier League match at Merry Arts Pub & Grille
      </h3>
      <p class="subhead text-gold">(and yes, even the 7 am ones)<p>
    </div>
    <div data-testid="links" class="pb-2 mx-[1.5rem]">
      <a class="block border-b-1 border-divider p-1" href="https://maps.app.goo.gl/XHD6rF3iRXUfG5Wt9">15607 1/2 Detroit Ave, Lakewood, OH 44107</a>
      <a class="block p-1" href="https://merryartspubandgrille.com">https://merryartspubandgrille.com</a>
    </div>
  </div>
  <div class="items-center md:w-[100%] flex-grow lg:w-3/8">
    <a href="https://maps.app.goo.gl/XHD6rF3iRXUfG5Wt9" class="items-center flex">
      <Image
        class="lg"
        src={fromBase("/images/merry-arts-map.png")}
        alt="map"
        width={1044}
        height={600}
        class="w-full"
        format="webp"
      />
    </a>
  </div>
</div>
